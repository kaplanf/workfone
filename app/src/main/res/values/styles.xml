<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@android:color/white</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">2dp</item>
        <item name="radius">3dp</item>
        <item name="android:spacing">3dp</item>
        <item name="android:fillAfter">true</item>
        <item name="pageColor">@color/dark_blue</item>
    </style>

</resources>
